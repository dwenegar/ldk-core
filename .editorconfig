root = true

[*]
charset = utf-8
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf

[{Makefile,Makefile.in}]
indent_style = tab
tab_width = 8

[*.lua]
indent_size = 2

[*.json]
indent_size = 2

[{*.ld,*.ld.in}]
indent_size = 2

[{*.rockspec,rockspec.in}]
indent_size = 2

[*.yml]
indent_size = 3
